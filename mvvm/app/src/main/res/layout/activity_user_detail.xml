<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/user_detail_swipe_refresh_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ivanalvarado.architecture_components.ui.UserDetailActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/user_detail_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="John Skeet"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"/>

        <TextView
                android:id="@+id/user_detail_reputation_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1000000"
                app:layout_constraintTop_toBottomOf="@+id/user_detail_name_text_view"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"/>

        <TextView
                android:id="@+id/user_detail_location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Los Angeles, CA"
                app:layout_constraintTop_toBottomOf="@+id/user_detail_reputation_text_view"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"/>

        <TextView
                android:id="@+id/user_detail_type_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="User Type"
                app:layout_constraintTop_toBottomOf="@+id/user_detail_location_text_view"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>

    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.SwipeRefreshLayout>
