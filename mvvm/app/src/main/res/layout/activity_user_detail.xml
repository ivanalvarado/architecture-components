<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/user_detail_swipe_refresh_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ivanalvarado.architecture_components.ui.UserDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/user_detail_profile_image"
                android:layout_width="128dp"
                android:layout_height="128dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/user_detail_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="John Skeet"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/user_detail_reputation_text_view"/>

        <TextView
                android:id="@+id/user_detail_reputation_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1000000"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/user_detail_profile_image"
                app:layout_constraintEnd_toEndOf="@+id/user_detail_profile_image"
                app:layout_constraintStart_toStartOf="@+id/user_detail_profile_image"/>

        <TextView
                android:id="@+id/user_detail_location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Los Angeles, CA"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/user_detail_name_text_view"/>

        <TextView
                android:id="@+id/user_detail_type_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="User Type"
                app:layout_constraintTop_toBottomOf="@+id/user_detail_location_text_view"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
